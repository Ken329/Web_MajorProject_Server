<div class="small-login-con">
    <form action="" class="login-con signup-con">
        <label for="">New Email:</label>
        <input type="email" id="admin_email" placeholder="Enter your email">
        <label for="">New Password:</label>
        <input type="password" id="admin_password" placeholder="Enter your password">
        <label for="">Confirm Password:</label>
        <input type="password" id="admin_con_password" placeholder="Confirm your password">
        <label for="">Restaurant Name:</label>
        <input type="text" id="admin_restaurant" placeholder="Restaurant Name">
        <label for="">Restaurant Cuisine:</label>
        <select id="admin_cuisine">
            <option value="Chinese">Chinese</option>
            <option value="Eastern">Eastern</option>
            <option value="Indian">Indian</option>
            <option value="Malay">Malay</option>
            <option value="Japanese">Japanese</option>
            <option value="Korean">Korean</option>
        </select>
        <label for="">Image Address</label>
        <input type="text" id="admin_image" placeholder="Restaurant Image Address">
        <label for="">Operating Hour</label>
        <input type="time" id="admin_open_time">
        <label for="">Closure Hour</label>
        <input type="time" id="admin_close_time">
        <button type="button" id="admin_signup">Sign Up</button>
    </form>
</div>
<script src="js/admin_signup.js"></script>