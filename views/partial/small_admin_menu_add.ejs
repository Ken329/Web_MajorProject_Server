<div class="small-login-con">
    <form action="" class="admin-menu-con">
        <label for="">Food Name:</label>
        <input type="text" id="food_name" placeholder="Enter your food name">
        <label for="">Food Price:</label>
        <input type="text" id="food_price" placeholder="Enter your food price">
        <label for="">Food Categories:</label>
        <input type="text" id="food_categories" placeholder="Enter your food categories">
        <label for="">Food Image</label>
        <input type="text" id="food_image" placeholder="Food Image Address">
        <label for="">Available: </label>
        <div class="food-btn-con">
            <div id="available_toggle" class="admin-menu-con-toggle"></div>
            <button type="button" id="available_y">Yes</button>
            <button type="button" id="available_n">No</button>
        </div>
        <label for="">Discount: </label>
        <div class="food-btn-con">
            <div id="discount_toggle" class="admin-menu-con-toggle"></div>
            <button type="button" id="discount_y">Yes</button>
            <button type="button" id="discount_n">No</button>
        </div>
        <button type="button" id="admin_add_menu">Add to Menu</button>
    </form>
</div>
